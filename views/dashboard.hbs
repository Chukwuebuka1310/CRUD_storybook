<h6>Dashboard</h6>
<h3>Welcome {{name}}</h3>
<p class="lead">Here are you stories</p>

{{#if stories}}
   <table class="striped">
      <thead>
         <tr>
            <th>Title</th>
            <th>Date</th>
            <th>status</th>
            <th></th>
         </tr>
      </thead>

      {{#each stories}}

         <tr>
            <td><a href="/stories/{{_id}}">{{title}}</a></td>
            <td>{{formatDate createdAt 'MMMM Do YYYY, h:mm:ss a'}}</td>
            <td><span class="dash-status">{{ status }}</span></td>
            <td>
               <a href="/stories/edit/{{_id}}" class="btn btn-float small">
               <i class="fas fa-edit"></i>
               </a>
               <form action="/stories/delete/{{_id}}" method="POST">
                  <input type="hidden" name="_method" value="DELETE">
                  <button type="submit" class="btn red small"><i class="fas fa-trash"></i></button>
               </form>
            </td>
         </tr>

      {{/each}}

   </table>
{{else}}
   <p>You have not created any stories</p>
{{/if}}